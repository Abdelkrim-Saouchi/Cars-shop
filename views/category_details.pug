extends layout 

block content 
    h2(class="mb-4 text-3xl md:text-4xl font-bold") #{title}
    div(class="flex flex-col gap-4 max-w-3xl") 
      h3(class="text-2xl md:text-3xl font-bold") #{category.name}
      p  #[b description:] #{category.description}
      div(class="flex gap-3 flex-wrap") 
        a(href=category.url+"/delete", class="p-2 bg-black text-white rounded") Delete 
        a(href=category.url+"/update", class="p-2 bg-black text-white rounded") Update