extends layout 

block content 
  h2(class="mb-4 text-3xl md:text-4xl font-bold") #{title}: #{category.name}
  if cars.length 
    p(class="text-xl") #[strong Delete the following cars before delete this category:] 
    ul(class="list-disc list-inside") 
      for car in cars 
        li #[a(href=car.url, class="text-blue-600 font-bold") #{car.name}]
  else 
    p(class="text-xl") Do you really want to delete this category?
    form(action="", method="post")
      input(type="hidden", name="categoryId", value=category._id, required)
      button(type="submit", class="my-4 p-2 rounded bg-black text-white") Delete 