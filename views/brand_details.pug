extends layout 

block content 
  h2(class="mb-4 text-3xl md:text-4xl font-bold") #{title}
  div(class="mb-4 md:w-3/4 flex flex-col gap-2") 
    img(src="/images/logo-placeholder-image.png", alt="Brand", class="md:w-1/2")
    h3(class="text-2xl md:text-3xl font-bold") #{brand.name} 
    p  #[b description:] #{brand.description}
    p #[b types:]
    ul(class="flex items-center gap-4") 
      for category in brand.category 
        li(class="p-2 border border-black rounded") #{category.name}
  div(class="flex gap-3 flex-wrap") 
    a(href=brand.url+"/delete", class="p-2 bg-black text-white rounded") Delete 
    a(href=brand.url+"/update", class="p-2 bg-black text-white rounded") Update