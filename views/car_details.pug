extends layout 

block content 
  h2(class="mb-4 text-3xl md:text-4xl font-bold") Car details: 
  div(class="mb-4 md:w-3/4 flex flex-col gap-2") 
    img(src=(car.imgPath === undefined ? "/images/car-placeholder.jpg" : car.imgPath), alt="Car", class="md:w-1/2")
    h3(class="text-2xl md:text-3xl font-bold") #{car.name} 
    p  #[b brand:] #{car.brand.name} 
    p  #[b description:] #{car.description}
    p  #[b type:] #{car.category.name} 
    p  #[b price:] #{car.price.toLocaleString('en-US')}$ 
    p  #[b number in stock:] #{car.numberInStock}
  div(class="flex gap-3 flex-wrap") 
    a(href=car.url+"/delete", class="p-2 bg-black text-white rounded") Delete 
    a(href=car.url+"/update", class="p-2 bg-black text-white rounded") Update